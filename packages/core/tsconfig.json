{
    "compilerOptions": {
      "outDir": "./dist",
      "declaration": true,
      "target": "es5",
      "baseUrl": "./",
      "lib": ["ESNext", "DOM"],
      "module": "CommonJS",
      "downlevelIteration": true,
      "types": ["node", "vitest/globals"],
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "__tests__/*"]
  }